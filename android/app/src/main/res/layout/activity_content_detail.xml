<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sosoham.sosoham.ContentDetailActivity"
    android:background="@drawable/main_soso_05">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="title"
        android:textSize="30dp"
        android:id="@+id/detailTitleText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/detailContextText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:text="content"
        android:textSize="20dp"
        android:id="@+id/detailContextText"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/detailTitleText" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CommentListView"
        android:layout_marginTop="319dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/detailActionAButton"
        android:layout_below="@+id/detailContextText"
        android:layout_alignParentStart="true"
        android:src="@drawable/metoo"
        android:clickable="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/detailActionBButton"
        android:src="@drawable/sorry"
        android:layout_marginStart="38dp"
        android:layout_alignBottom="@+id/detailActionAButton"
        android:clickable="true"
        android:layout_toEndOf="@+id/detailActionAButton" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/detailPurchaseButton"
        android:src="@drawable/present"
        android:layout_below="@+id/detailContextText"
        android:clickable="true"
        android:layout_alignEnd="@+id/detailContextText" />

</RelativeLayout>
